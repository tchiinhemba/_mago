<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente1"
    tools:context=".SplashScreen">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="420dp"
        android:src="@mipmap/splashscreen"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txtbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tchinhemba Inc."
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:fontFamily="@font/balooda_regular"
        android:textColor="@android:color/white"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="15sp" />

    <TextView
        android:layout_above="@id/txtbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAGO BY"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="15sp" />

</RelativeLayout>